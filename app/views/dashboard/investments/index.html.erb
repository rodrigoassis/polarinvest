<h1>Investments</h1>

<table>
  <thead>
    <tr>
      <th>Asset</th>
      <th>Type</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>
    <% @investments.each do |investment| %>
      <tr>
        <td><%= investment.asset.name %></td>
        <td><%= investment.class.clean_name %></td>
        <td><%= link_to 'Show', investment %></td>
        <td><%= link_to 'Edit', edit_investment_path(investment) %></td>
        <td><%= link_to 'Destroy', investment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Investment', new_dashboard_investment_path %>
