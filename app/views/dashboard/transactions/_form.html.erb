<div class="box-body form">
  <%= form_for([:dashboard, @transaction], html: {class: "form-horizontal"}) do |f| %>
    <div class="wizard-form">
      <div class="wizard-content">
        <div class="tab-content">
          <div class="tab-pane active">
            <div class="form-group <%= 'has-error' if f.object.errors.include?(:investment_id) %>">
              <%= f.label :investment_id, class: "control-label col-md-3" %>
              <div class="col-md-4">
                <%= f.collection_select :investment_id, current_user.investments, :id, :name, {include_blank: true}, {class: 'col-md-12 full-width-fix form-control'} %>
                <% if f.object.errors.include?(:investment_id) %>
                  <span class="help-block"><%= f.object.errors.messages[:investment_id].first %></span>
                <% end %>
              </div>
            </div>
            <div class="form-group <%= 'has-error' if f.object.errors.include?(:date) %>">
              <%= f.label :date, class: "control-label col-md-3" %>
              <div class="col-md-4">
                <%= f.date_field :date, class: 'col-md-12 full-width-fix form-control' %>
                <% if f.object.errors.include?(:date) %>
                  <span class="help-block"><%= f.object.errors.messages[:date].first %></span>
                <% end %>
              </div>
            </div>
            <div class="form-group <%= 'has-error' if f.object.errors.include?(:transaction_type) %>">
              <%= f.label :transaction_type, class: "control-label col-md-3" %>
              <div class="col-md-4">
                <%= f.select :transaction_type, Transaction.all_types, {include_blank: true}, {class: 'col-md-12 full-width-fix form-control'} %>
                <% if f.object.errors.include?(:transaction_type) %>
                  <span class="help-block"><%= f.object.errors.messages[:transaction_type].first %></span>
                <% end %>
              </div>
            </div>
            <div class="form-group <%= 'has-error' if f.object.errors.include?(:shares_quantity) %>">
              <%= f.label :shares_quantity, class: "control-label col-md-3" %>
              <div class="col-md-4">
                <%= f.text_field :shares_quantity, class: 'form-control' %>
                <% if f.object.errors.include?(:shares_quantity) %>
                  <span class="help-block"><%= f.object.errors.messages[:shares_quantity].first %></span>
                <% end %>
              </div>
            </div>
            <div class="form-group <%= 'has-error' if f.object.errors.include?(:unit_value) %>">
              <%= f.label :unit_value, class: "control-label col-md-3" %>
              <div class="col-md-4">
                <div class="input-group">
                  <span class="input-group-addon">R$</span>
                  <%= f.text_field :unit_value, class: 'form-control' %>
                </div>
                <% if f.object.errors.include?(:unit_value) %>
                  <span class="help-block"><%= f.object.errors.messages[:unit_value].first %></span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="wizard-buttons">
        <div class="row">
          <div class="col-md-12">
            <div class="col-md-offset-3 col-md-9">
              <%= link_to '<i class="fa fa-arrow-circle-left"></i> Voltar'.html_safe, dashboard_transactions_path, class: "btn btn-default prevBtn" %>
              <button type="submit" class="btn btn-primary submitBtn">Cadastrar</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>