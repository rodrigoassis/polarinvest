<div class="center">
  <strong>Ou se cadastre nesse simples formulário</strong>
</div>
<div class="divide-20"></div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), role: 'form') do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Nome' %>
    <i class="fa fa-font"></i>
    <%= f.text_field :name, autofocus: true, class: 'form-control', id: 'exampleInputEmail1' %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <i class="fa fa-envelope"></i>
    <%= f.email_field :email, class: 'form-control', id: 'exampleInputEmail1' %>
  </div>

  <div class='form-group'>
    <%= f.label :password, 'Senha' %>
    <i class="fa fa-lock"></i>
    <%= f.password_field :password, class: 'form-control', id: 'exampleInputPassword1'%>
  </div>

  <div class='form-group'>
    <%= f.label :password_confirmation, 'Confirmação da senha' %>
    <i class="fa fa-check-square-o"></i>
    <%= f.password_field :password_confirmation, class: 'form-control', id: 'exampleInputPassword1'%>
  </div>

  <div class="form-actions">
    <button type="submit" class="btn btn-danger">Cadastrar</button>
  </div>

<% end %>

<div class="login-helpers">
  Já possui conta?
  <%= link_to "Faça login", new_session_path(resource_name) %>
</div>